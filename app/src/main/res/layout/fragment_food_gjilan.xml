                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3. Bujana "
                android:textStyle="bold|italic"
                android:textColor="@color/dark_blue"
                android:background="@color/baby_blue"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="1"
                android:layout_marginTop="16dp">


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bujana" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bujana1" />
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bujana2" />
            </GridLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="From the land of eagles with Albanian flavor and national pride.
Welcome to the new environment!"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Address:  Restaurant Bujana 60000 Gjilan, Kosovo"
                android:textColor="@color/dark_red"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hours: Always open"
                android:textColor="@color/dark_red"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Phone: +383 44 136 724"
                android:textColor="@color/dark_red"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4. Garden Restaurant "
                android:textStyle="bold|italic"
                android:textColor="@color/dark_blue"
                android:background="@color/baby_blue"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="1"
                android:layout_marginTop="16dp">


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/garden" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/garden2" />
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/garden1" />
            </GridLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Where taste meets nature.
Fresh and delicious flavors and unforgettable memories."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Address: rr. Prishtines p.n, Gjilan, Kosovo"
                android:textColor="@color/dark_red"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hours: Opens 06:00AM-Closes 01:00AM"
                android:textColor="@color/dark_red"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Phone: +383 49 656 800"
                android:textColor="@color/dark_red"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
